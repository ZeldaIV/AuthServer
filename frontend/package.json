{
  "name": "Authserver",
  "version": "1.0.0",
  "author": "Trond Bordewich",
  "description": "Authorization server",
  "scripts": {
    "start": "yarn install && yarn run build:dev && yarn run dev",
    "test": "elm-test",
    "test:watch": "elm-test --watch",
    "build": "run-s build:elm-spa build:elm",
    "build:dev": "run-s build:elm-spa build:dev:elm",
    "dev": "run-p dev:elm-spa dev:elm",
    "build:elm": "elm make src/Main.elm --optimize --output=public/dist/elm.compiled.js",
    "build:dev:elm": "elm make src/Main.elm --debug --output=public/dist/elm.compiled.js || true",
    "build:elm-spa": "elm-spa build .",
    "dev:elm": "elm-live src/Main.elm -u -d public --host=127.0.0.1 --port=3001 --ssl-key='../Certificates/nginx-selfsigned.key' --ssl-cert='../Certificates/nginx-selfsigned.crt' -- --debug --output=public/dist/elm.compiled.js",
    "dev:mock": "run-p runmockserver dev:elm",
    "runmockserver": "node ./api_mocking/mock_api.js",
    "dev:elm-spa": "chokidar src/Pages -c \"elm-spa build .\"",
    "buildAll": "run-s generateApi build",
    "genSwagger": "ASPNETCORE_ENVIRONMENT=SwaggerGen dotnet build ../",
    "genElmApiCode": "docker run --rm -v \"${PWD}:/local\" openapitools/openapi-generator-cli generate -i local/swagger.yaml -g elm -o /local",
    "generateApi": "run-s genSwagger genElmApiCode",
    "publish": "cp -r ./public/ ../wwwroot"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "chokidar-cli": "2.1.0",
    "elm": "0.19.1-3",
    "elm-live": "4.0.2",
    "elm-spa": "5.0.3",
    "elm-test": "0.19.1-revision2",
    "npm-run-all": "4.1.5"
  }
}
