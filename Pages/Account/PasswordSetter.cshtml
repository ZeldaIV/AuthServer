@page
@model Authserver.Pages.Account.PasswordSetterModel
@{
    ViewData["Title"] = "Log in";
}

<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please set a password</h3>
        </div>
        <div class="panel-body">
            <label asp-for="Username"></label>
            <form asp-route="SetPassword">
                <input type="hidden" asp-for="Token"/>
                <fieldset>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input type="password" class="form-control" placeholder="Confirm password" asp-for="Input.ConfirmPassword" autocomplete="off">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" name="submit" value="setPassword">Ok</button>
                        <button class="btn btn-default" name="cancel" value="cancel">Cancel</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}